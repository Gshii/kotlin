<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light">

    <EditText
        android:id="@+id/password2_edittext_register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email2_edittext_register"
        app:layout_constraintStart_toStartOf="@+id/email2_edittext_register"
        app:layout_constraintTop_toBottomOf="@+id/email2_edittext_register" />

    <EditText
        android:id="@+id/email2_edittext_register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_button_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Log in"
        app:layout_constraintEnd_toEndOf="@+id/password2_edittext_register"
        app:layout_constraintStart_toStartOf="@+id/password2_edittext_register"
        app:layout_constraintTop_toBottomOf="@+id/password2_edittext_register" />

    <TextView
        android:id="@+id/back_to_registration_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back to registration"
        app:layout_constraintEnd_toEndOf="@+id/login_button_register"
        app:layout_constraintStart_toStartOf="@+id/login_button_register"
        app:layout_constraintTop_toBottomOf="@+id/login_button_register" />
</androidx.constraintlayout.widget.ConstraintLayout>